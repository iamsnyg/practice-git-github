{
  "name": "my-web-project",
  "private": true,
  "scripts": {
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint .",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.html": "htmlhint",
    "*.css": "stylelint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "htmlhint": "^1.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
