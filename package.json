{
  "name": "my-web-project",
  "private": true,
  "scripts": {
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint .",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
    "setup": "npm install && husky install && echo Setup complete! Pre-commit hooks are active.",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.html": [
      "prettier --write",
      "htmlhint"
    ],
    "*.css": [
      "prettier --write",
      "stylelint"
    ],
    "*.js": [
      "prettier --write",
      "eslint"
    ],
    "*.{json,md}": "prettier --write"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "htmlhint": "^1.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
